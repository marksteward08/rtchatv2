<%- include('./partials/header.ejs')%>
<!--*CONTENT GOES HERE -->

<div class="wrapper flex">
    <div class="container flex" id="container">
        <div class="msg-container" id="msg-container">
            <div class="content flex right">
                <div class="bubble you">Welcome <b><%=locals.username%>!</b> Type anything here!
                </div>
            </div>

            <% for (let messages of locals.generalChat) { %>
                <% if (username == messages.username) { %>
                    <div class="content flex right">
                        <div class="bubble you"><%=messages.message%></div>
                    </div>
                <% } else {%>
                    <div class="content flex">
                        <div class="bubble"><small><b><%=messages.username%></b></small><br><%=messages.message%>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
</div>

<div class="send-message">
    <div class="send-msg-container flex">
        <form id="form" class="flex">
            <input id="input" name="" class="textarea" placeholder="Type your message here...">
            <button id="send">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"/>
                </svg>
            </button>
        </form>
    </div> 
</div>

